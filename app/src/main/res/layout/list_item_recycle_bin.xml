<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    android:background="@drawable/back_item_list">

    <TextView
        android:id="@+id/txt_title_notes"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        tools:text="هزینه های منزل"
        android:textSize="24sp"
        android:textColor="@color/black100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_delete_notes"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        app:tint="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_restore_notes"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        app:tint="@color/Ferozeh200"
        app:layout_constraintBottom_toBottomOf="@+id/img_delete_notes"
        app:layout_constraintStart_toEndOf="@+id/img_delete_notes"
        app:layout_constraintTop_toTopOf="@+id/img_delete_notes"
        app:srcCompat="@drawable/ic_restore" />

</androidx.constraintlayout.widget.ConstraintLayout>