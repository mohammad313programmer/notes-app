<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Ferozeh200"
    tools:context=".ui.SplashActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/rectangle_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/rectangle_a"
        app:layout_constraintEnd_toEndOf="@+id/img_note_book"
        app:layout_constraintStart_toStartOf="@+id/img_note_book"
        app:layout_constraintTop_toBottomOf="@+id/img_note_book" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/rectangle_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:src="@drawable/rectangle_b"
        app:layout_constraintBottom_toTopOf="@+id/img_note_book"
        app:layout_constraintEnd_toEndOf="@+id/img_note_book"
        app:layout_constraintStart_toStartOf="@+id/img_note_book" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_note_book"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/notebook_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version"
        android:textColor="@color/white100"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>